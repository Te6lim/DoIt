<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/todo_navigation"
    app:startDestination="@id/todoListFragment">

    <fragment
        android:id="@+id/todoListFragment"
        android:name="com.example.doit.todoList.TodoListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_list_todo">
        <action
            android:id="@+id/action_todoListFragment_to_createTodoFragment"
            app:destination="@id/createTodoFragment"
            app:enterAnim="@anim/jump_in"
            app:exitAnim="@anim/slide_left_from_center"
            app:popEnterAnim="@anim/slide_right_from_left"
            app:popExitAnim="@anim/fall_out" />
        <action
            android:id="@+id/action_todoListFragment_to_completedTodoListFragment"
            app:destination="@id/finishedTodoListFragment" />
        <action
            android:id="@+id/action_todoListFragment_to_summaryFragment"
            app:destination="@id/summaryFragment" />
    </fragment>
    <fragment
        android:id="@+id/createTodoFragment"
        android:name="com.example.doit.todoList.createTodo.CreateTodoFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_todo_create">
        <argument
            android:name="defaultCategoryId"
            android:defaultValue="-1"
            app:argType="integer" />
        <argument
            android:name="todoId"
            android:defaultValue="-1L"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/finishedTodoListFragment"
        android:name="com.example.doit.finishedTodoList.FinishedTodoListFragment"
        android:label="@string/finished"
        tools:layout="@layout/fragment_list_todo_finished">
        <action
            android:id="@+id/action_completedTodoListFragment_to_todoListFragment"
            app:destination="@id/todoListFragment" />
        <action
            android:id="@+id/action_finishedTodoListFragment_to_summaryFragment"
            app:destination="@id/summaryFragment" />
    </fragment>
    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.example.doit.todoList.categories.CategoriesFragment"
        android:label="@string/categories"
        tools:layout="@layout/fragment_categories" />
    <fragment
        android:id="@+id/summaryFragment"
        android:name="com.example.doit.summary.SummaryFragment"
        android:label="@string/summary"
        tools:layout="@layout/fragment_summary">
        <action
            android:id="@+id/action_summaryFragment_to_finishedTodoListFragment"
            app:destination="@id/finishedTodoListFragment" />
        <action
            android:id="@+id/action_summaryFragment_to_todoListFragment"
            app:destination="@id/todoListFragment" />
    </fragment>
</navigation>